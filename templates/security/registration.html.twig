{% extends 'base.html.twig' %}

{% block body %}
	<h3>Connexion</h3>
	<div class="mx-auto mt-5" style="width: 150px;">
		<a href="/login">
			<button type="submit" class="btn btn-danger">Connexion !</button>
		</a>
	</div>

<div class="mx-auto mt-5" style="width: 200px;">
	{{ form_start(form)}}

	{{ form_row(form.username, {'label': 'Nom d\'utilisateur' , 'attr': {'placeholder': 'Nom d\'utilisateur ...'}}) }}
	{{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email ...'}})}}
	{{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}})}}
	{{ form_row(form.confirm_password, {'label': 'Confirmation', 'attr': {'placeholder': 'Répétez mot de passe'}})}}
</div>
	<div class="mx-auto mt-5" style="width: 150px;">
		<a href="/panier">
			<button type="submit" class="btn btn-success"> Créer un compte</button>
		</a>
	</div>
	{{ form_end(form)}}

{% endblock %}